@model WebTextAnalyzer.Models.Form

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Form</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <div class="col-md-1">
        </div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Input, new { htmlAttributes = new { @class = "Mytextarea", @placeholder = "Type your name" } })
            @Html.ValidationMessageFor(model => model.Input, "", new { @class = "text-danger" })
        </div>
    </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
    if(Model != null && Model.Result != null)
    {
        foreach (var item in Model.Result)
        {
            <p style="font-size: 2em;">@item</p>
        }

    }
}


